echo "Setting up wireless hotspot"
ip link set wlan1 down
iwconfig wlan1 mode ad-hoc
iwconfig wlan1 channel 1
iwconfig wlan1 essid '7of9'
iwconfig wlan0 key off
#  this needs to be a 26 char hex value
#iwconfig wlan1 key enterprisE!
ip addr add 192.168.1.255/16 dev wlan1
ip link set wlan1 up
/usr/sbin/dhcpd wlan1
